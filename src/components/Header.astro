<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: #0a0a0a;
    border-bottom: 1px solid #222;
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
    color: #ffffff;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: #e8e8e8;
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: #ff3c3c;
  }
  nav a:hover {
    color: #ff3c3c;
  }
  .social-links,
  .social-links a {
    display: flex;
    gap: 0.5em;
  }
  .social-links a {
    color: #e8e8e8;
  }
  .social-links a:hover {
    color: #ff3c3c;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>