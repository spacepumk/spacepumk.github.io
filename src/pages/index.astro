---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

const featuredImages = [
  '/images/placeholder-1.jpg',
  '/images/placeholder-2.jpg',
  '/images/placeholder-3.jpg'
];
---

<!doctype html>
<html lang="en">
<head>
<BaseHead title={SITE_TITLE} description="Paris concert photography" />
</head>
<body>
<Header />

<!-- Image banner at top - OUTSIDE main -->
<section class="image-banner">
  {featuredImages.map((img) => (
    <img src={img} alt="Concert photo" />
  ))}
</section>

<main>
  <!-- Main intro -->
  <section class="intro">
    <h1>spacepumk</h1>
    <p class="tagline">Paris concert photography.<br/>
    Alt · punk · rock · whatever moves me.</p>
  </section>

  <!-- What I do -->
  <section class="info">
    <p>Shooting the Paris alternative scene since 2024. Post-punk, metal, indie, shoegaze — whatever's loud and worth documenting.</p>
    
    <div class="recent-bands">
      <p><strong>Recent:</strong> Deftones · Pierce the Veil · Slowdive · Empire of the Sun · Jakuzi · GSUFEST</p>
    </div>

    <p>Looking for a photographer for your show? Hit me up!</p>
  </section>

  <!-- CTA -->
  <section class="cta">
    <a href="/blog" class="big-link">→ See all shows</a>
  </section>

</main>

<Footer />
</body>
</html>

<style>
  /* Image banner - full width */
  .image-banner {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4px;
    margin: 0;
    padding: 0;
    width: 100%;
  }

  .image-banner img {
    width: 100%;
    height: 450px;
    object-fit: cover;
    display: block;
    margin: 0;
    padding: 0;
  }

  /* Main container */
  main {
    max-width: 1000px;
    margin: 0 auto;
    padding-top: 3em;
  }

  /* Main sections */
  section {
    padding: 0 2em;
  }

  .intro {
    text-align: center;
    margin-bottom: 3em;
  }

  .intro h1 {
    font-size: 3.5em;
    margin-bottom: 0.3em;
  }

  .tagline {
    font-size: 1.3em;
    line-height: 1.6;
    color: #ccc;
  }

  .info {
    max-width: 700px;
    margin: 0 auto 3em;
    line-height: 1.8;
  }

  .info p {
    margin-bottom: 1.5em;
  }

  .recent-bands {
    background: #111;
    border-left: 3px solid #ff3c3c;
    padding: 1.5em;
    margin: 2em 0;
  }

  .recent-bands strong {
    color: #ff3c3c;
  }

  .cta {
    text-align: center;
    margin: 4em 0;
    display: flex;
    gap: 2em;
    justify-content: center;
    align-items: center;
  }

  .big-link {
    font-size: 1.5em;
    color: #ff3c3c;
    text-decoration: none;
    font-weight: bold;
  }

  .big-link:hover {
    text-decoration: underline;
  }

  .secondary-link {
    color: #999;
    text-decoration: none;
  }

  .secondary-link:hover {
    color: #ff3c3c;
  }

  .contact {
    text-align: center;
    padding: 3em 2em;
    border-top: 1px solid #222;
    color: #999;
  }

  .contact p {
    margin-bottom: 0.5em;
  }

  .contact a {
    color: #ff3c3c;
    text-decoration: none;
  }

  .contact a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .image-banner {
      grid-template-columns: 1fr;
      gap: 2px;
    }

    .image-banner img {
      height: 200px;
    }

    .intro h1 {
      font-size: 2.5em;
    }

    .cta {
      flex-direction: column;
      gap: 1em;
    }
  }
</style>